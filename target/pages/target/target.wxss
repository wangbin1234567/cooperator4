/* pages/target/target.wxss */
.target-box{
  width:100%;
  height:100%;
}
.title{
  width:100%;
  height:80rpx;
  display: flex;
  border-bottom:1px solid #ccc;
}
.title input{
  width:60%;
}
.title text{
  margin-left:10rpx;
}
.title text:nth-of-type(1){
  width:15%;
  height:60rpx;
  line-height:60rpx;
  text-align: center;
  color:#000;
  border:1px solid #ccc;
  border-radius: 5rpx;
}
.title text:nth-of-type(2){
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  font-size:25rpx;
}
.list{
  width:100%;
  height:100rpx;
  display: flex;
  align-content: center;
  background:#07f;
  margin-top:30rpx;
  border-radius: 10rpx;
}
.list text:nth-of-type(1){
  width:70%;
  line-height:100rpx;
}
.list text:nth-of-type(2){
  width:30%;
  line-height:100rpx;
  font-size:50rpx;
  color:#000;
}