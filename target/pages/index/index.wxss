/* pages/index/index.wxss */
.home{
  width:100%;
  height:100%;
  background:#ccc;
  display: flex;
  flex-direction: column;
}
.title{
  width:100%;
  height:80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background:#fff;
  color:#050505;
}
.center{
  height:780rpx;
  margin-top:30rpx;
  width:100%;
  display: flex;
  justify-content: center;
  border-radius: 10rpx;
}
.content{
  width:80%;
  background:#fff;
  height:780rpx;
}
.cont-title{
  width:100%;
  height:60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cont-title text{
  color:#c5c5c5;
}
.cont-title text:nth-of-type(1){
  font-size:40rpx;
  font-weight: 800;
  padding-left:20rpx;
}
.cont-title text:nth-of-type(2){
  font-size:30rpx;
  padding-right:20rpx;
}
.btn{
  width:100%;
  height:300rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.btn text{
  height:100rpx;
  line-height: 100rpx;
  background:#fff;
  font-size:70rpx;
  font-weight: 800;
  width:20%;
  text-align: center;
  border-radius: 50%;
  color:#c5c5c5;
}
