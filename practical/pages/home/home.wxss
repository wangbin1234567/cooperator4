/* pages/home/home.wxss */
.wrap{
  width: 100%;
  height: 1110rpx;
  display: flex;
  flex-direction: column;
}
.header{
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
}
.header text{
  flex: 1;
  text-align: center;
}
.header text.active{
  border-bottom: 1px solid #000;
}
.main{
  flex: 1;
  background: #eee;
  padding: 30rpx;
}
.box{
   background: #fff;
   border-radius: 10rpx;
   padding: 20rpx 50rpx;
}
.title{
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 20rpx;
  font-weight: 600;
  background: #fff;
}
.box view{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 20rpx;
  background: #eee;
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding: 0 20rpx;
}
.btn{
  position: absolute;
  left: 50%;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 80rpx;
  margin-left: -50rpx;
}
